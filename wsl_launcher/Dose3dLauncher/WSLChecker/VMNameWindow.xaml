<Window x:Class="Dose3dLauncher.WSLChecker.VMNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dose3dLauncher.WSLChecker"
        mc:Ignorable="d"
        
        Title="Change WSL name" Height="450" Width="800" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <StackPanel Margin="16">
        <Label>Enter new WSL name:</Label>
        <TextBox x:Name="TextBox" Height="24" MinWidth="100"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
            <Button Width="60" Height="24" Margin="4" IsDefault="True" Click="Button_Click">OK</Button>
            <Button Width="60" Height="24" Margin="4" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
